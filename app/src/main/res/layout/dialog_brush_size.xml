<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/ibSmallBrush"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/ibMediumBrush"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/small_brush_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageButton
        android:id="@+id/ibMediumBrush"
        android:layout_margin="1dp"
        app:layout_constraintTop_toBottomOf="@id/ibSmallBrush"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/ibLargeBrush"
        android:src="@drawable/medium_brush_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageButton
        android:id="@+id/ibLargeBrush"
        android:layout_margin="1dp"
        app:layout_constraintBottom_toTopOf="@id/ibVeryLargeBrush"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ibMediumBrush"
        android:src="@drawable/large_brush_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <ImageButton
        android:id="@+id/ibVeryLargeBrush"
        android:layout_margin="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ibLargeBrush"
        android:src="@drawable/very_large_brush_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</androidx.constraintlayout.widget.ConstraintLayout>